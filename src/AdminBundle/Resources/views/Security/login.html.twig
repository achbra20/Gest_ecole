{% extends "AdminBundle::layout.html.twig" %}
{% block title %} login{% endblock %}
{% block body %}
    {% trans_default_domain 'FOSUserBundle' %}
    {% block fos_user_content %}
        <div id="page-inner">
            <!-- /. ROW  -->
            <hr />
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Connexion
                        </div>
                        <div class="panel-body">

                                <form role="form" action="{{ path("fos_user_security_check") }}" method="post">
                                    {% if csrf_token %}
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                    {% endif %}
                                    <div class="col-md-12">
                                    <div class="form-group input-group">
                                        <span class="input-group-addon">@</span>
                                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="Username">
                                    </div>
                                    <div class="form-group input-group">
                                        <span class="input-group-addon"><i class="fa fa-key"></i> </span>
                                        <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Password">
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" id="remember_me" name="_remember_me" value="on">Se souvenir de moi
                                        </label>
                                    </div>
                                    </div>
                                    <div style=" float: right;">
                                        <button type="submit" class="btn btn-primary"> Connexion</button>
                                    </div>

                                 </form>
                            </div>
                            {% if error %}
                                <div><label>{{ error.messageKey|trans(error.messageData, 'Security') }}</label></div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
    {% endblock fos_user_content %}{# empty Twig template #}
{% endblock %}