{% extends "::Basetable.html.twig"%}
{% block title %} login{% endblock %}
{% block body %}

    <div>
        <h2>Ajouter******</h2>
        <h5>Home \ Ajouter*** </h5>
    </div>
    <hr />
{% block fos_user_content %}
    {% if res==1 %}
        <div class="panel panel-success">
            <div class="panel-heading">
                Ajout Fait Avec succes
            </div>

    {% elseif res== 2 %}
        <div class="panel panel-danger">
        <div class="panel-heading">
            echec d'ajout
        </div>
    {% else %}
        <div class="panel panel-default">
        <div class="panel-heading">
            Ajouter un***
        </div>
    {% endif %}
      {% trans_default_domain 'FOSUserBundle' %}
    <div class="panel-body">
    <div class=" col-md-2"></div>
    <div class="col-md-8">
        {{form_errors(form)}}
    <form role="form" action= "{{ path('fos_user_registration_register') }}" method="post">

        <div class="form-group input-group">
            <span class="input-group-addon">Nom</span>
            {{form_widget(form.nom,{'attr':{'class':'form-control span12'} })}}
            {{ form_errors(form.nom)}}
        </div>
        <div class="form-group input-group">
            <span class="input-group-addon">Prenom:</span>
            {{form_widget(form.prenom,{'attr':{'class':'form-control span12'} })}}
            {{ form_errors(form.prenom)}}
        </div>
        <div class="form-group input-group">
            <span class="input-group-addon">Date Naissance</span>
            {{form_widget(form.dateNais,{'attr':{'class':'form-control span12'} })}}
        </div>
        <div class="form-group input-group">
            <span class="input-group-addon">Adresse</span>
            {{form_widget(form.adress,{'attr':{'class':'form-control span12'} })}}
        </div>
        <div class="form-group input-group">
            <span class="input-group-addon">Code Postal</span>
            {{form_widget(form.codePostal,{'attr':{'class':'form-control span12'} })}}
        </div>
        <div class="form-group input-group">
            <span class="input-group-addon">Ville</span>
            {{form_widget(form.ville,{'attr':{'class':'form-control span12'} })}}
        </div>
        <div class="form-group input-group">
            <span class="input-group-addon">Telephone</span>
            {{form_widget(form.tel,{'attr':{'class':'form-control span12'} })}}
        </div>
        <div class="form-group input-group">
            <span class="input-group-addon ">E-mail </span>
            {{form_widget(form.email,{'attr':{'class':'form-control span12'} })}}
        </div>
        {{ form_errors(form.email)}}
        <div class="form-group input-group">
            <span class="input-group-addon">User Name </span>
            {{form_widget(form.username,{'attr':{'class':'form-control span12'} })}}
        </div>
        {{ form_errors(form.username)}}
        <div class="form-group input-group">
            <span class="input-group-addon">Mot de passe</span>
            {{form_widget(form.plainPassword.first,{'attr':{'class':'form-control span12'} })}}
        </div>
        {{ form_errors(form.plainPassword.first)}}
        <div class="form-group input-group">
            <span class="input-group-addon">Confirmer Mot de passe</span>
            {{form_widget(form.plainPassword.second,{'attr':{'class':'form-control span12'} })}}
        </div>
        {{ form_errors(form.plainPassword.second)}}
        <div style=" float: right;">
            <button type="submit" class="btn btn-primary"> Ajouter</button>
            <button  class="btn btn-default " type="reset"> Annuler</button>
        </div>
        {{ form_rest(form) }}
    </form>
    </div>
    <div class="col-md-2"></div>
    </div>
    </div>
{% endblock fos_user_content %}
{% endblock %}