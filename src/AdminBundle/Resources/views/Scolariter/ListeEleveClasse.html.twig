{% extends "::basetable.html.twig" %}
{% block title %}Liste Classe{% endblock %}
{% block in_scolarite %} in{% endblock %}
{% block activegest_calsse %}class="active-menu"{% endblock %}
{% block body %}
<div id="page-inner">
    <div class="row">
        <div class="col-md-10">
            <h2>{{ classe.libelle}}</h2>
            <h5>Home \ Liste des classe </h5>
        </div>
        <div class="col-md-2">
            <a href="{{ path('admin_ajouter_classe_eleve',{'id':classe.id}) }}" style="margin:5px;"  class="btn btn-primary" >
                <i class="fa fa-plus"></i> Ajouter un Elève
            </a>

        </div>
    </div>

    <hr />
    {% if res>0 %}
        <div class="alert alert-info alert-dismissable">
            <button class="close" aria-hidden="true" type="button" data-dismiss="alert">×</button>
            {% if res ==1 %}
                <h4 >Operation fait avec sucees</h4>
            {% else %}
                <h4 style="color: red">échec d'operation</h4>
            {% endif %}
        </div>
    {% endif %}
    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th>Nom de l'élève</th>
                                <th>Prenom de lélève</th>
                                <th  style="width:10%;" ></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% set i=1 %}
                                 {% for eleve in classe.eleve %}
                                <tr>
                                    <td>{{ eleve.nom }}</td>
                                    <td class="center">{{ eleve.prenom }}</td>
                                    <td class="center">
                                        <button class="btn btn-danger"  data-toggle="modal" data-target="#myModal{{i}}"><i class="fa fa-trash-o"></i> Supprimer </button>
                                    </td>
                                </tr>
                                 {% set i=i+1 %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>
</div>

    {% set j=1 %}
    {% for eleve in classe.eleve %}
        <div class="modal fade" id="myModal{{j}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">Supprimer un niveau</h4>
                    </div>
                    <div class="modal-body">
                        Vous Voulez Supprimer  {{ eleve.nom }} {{ eleve.prenom }} de {{ classe.Libelle }}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                        <a href="{{ path('admin_supp_eleve_classe',{'id':eleve.id,'idclasse':classe.id}) }}"class="btn btn-danger"><i class="fa fa-trash-o"></i> Supprimer </a>
                    </div>
                </div>
            </div>
        </div>
        {% set j=j+1 %}
    {% endfor %}
{% endblock %}