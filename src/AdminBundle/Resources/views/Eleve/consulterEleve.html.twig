{% extends "::basetable.html.twig" %}
{% block title %}Consulter l'Eleve{% endblock %}
{% block in_scolarite %} in{% endblock %}
{% block activegest_eleve %}class="active-menu" {% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-8">
            <h2>Dossier scolaire de l'élève</h2>
            <h5>Home \ Liste des eléves\ {{ eleve.nom }} {{ eleve.prenom }} </h5>
        </div>
        <div class="col-md-4">
            <img src="{{asset(eleve.webpath)}}"  alt="{{eleve.url}}"  class="user-image img-responsive"/>
        </div>
    </div>
    <div class="panel panel-default">
    <div class="panel-body">
        <div class="col-md-12">
            <a class="btn btn-warning" href="{{ path('admin_modif_eleve',{'id':eleve.id}) }}"><i class="fa fa-edit"></i> Modifier </a>
            <a class="btn btn-primary" href="{{ path('admin_payer_eleve',{'id':eleve.id,'res':0}) }}"><i class="fa fa-money"></i> Consulter les paiment </a>            <a class="btn btn-info" href="#"><i class="fa fa-archive"></i> Consulter les notes   </a>
            <a class="btn btn-info" href="#"><i class="fa fa-calendar"></i> Consulter les absences </a>
        </div>
    </div>
    </div>
    <hr />
    <div class="panel panel-default">
        <div class="panel-heading">
         {{ eleve.nom }} {{ eleve.prenom }}
        </div>
        <div class="panel-body">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#infog" data-toggle="tab">Informaion Generale</a>
                </li>
                <li class=""><a href="#parent" data-toggle="tab">Parent</a>
                </li>
                <li class=""><a href="#autre" data-toggle="tab">Autre</a>
                </li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane fade active in" id="infog">
                    <h4>{{ eleve.nom }} {{ eleve.prenom }}</h4>
                    <div class="col-md-4">
                      <p>Date de naissance:  {{ eleve.dateNais|date("d/m/Y") }}</p>
                      <p>Adresse de residence:  {{ eleve.adress }}</p>
                    </div>
                    <div class="col-md-4">
                        <p>Lieu de Naissaince:  {{ eleve.lieuNaisance }}</p>
                        <p>Ville:  {{ eleve.ville}}</p>
                    </div>
                    <div class="col-md-4">
                        <p>Sexe:  {{ eleve.sexe }}</p>
                        <p>Code postal:  {{ eleve.codePostal}}</p>
                    </div>
                </div>
                <div class="tab-pane fade" id="parent">
                    <div class="col-md-4">
                        <p>Nom du Pére:  {{ eleve.nomPere }}</p>
                        <p>Nom du mére:  {{ eleve.nomMere }}</p>
                        <p>Autre adresse: {{ eleve.AdressParent}}</p>
                    </div>
                    <div class="col-md-4">
                        <p>Fonction:  {{ eleve.fonctionPere }}</p>
                        <p>Fonction:  {{ eleve.fonctionMere}}</p>
                    </div>
                    <div class="col-md-4">
                        <p>Telephone:  {{ eleve.telParent1 }}</p>
                        <p>Telephone:  {{ eleve.telParent2}}</p>
                    </div>
                </div>
                <div class="tab-pane fade" id="autre">
                    <div class="col-md-4">
                        <p>Date d'inscription:  {{ eleve.Dateentre|date("d/m/Y") }}</p>
                    </div>
                    <div class="col-md-4">
                        <p>Niveau précedent: {{ eleve.NivPrec}}</p>
                    </div>
                    <div class="col-md-4">
                        <p>Ecole précedent:  {{ eleve.Arrivede }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <!--    Hover Rows  -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Historique
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>Année scolaire</th>
                                <th>Niveau</th>
                                <th>Classe</th>
                            </tr>
                            </thead>
                            <tbody>
                             {%  for classe in eleve.classe %}
                            <tr>
                                <td>{{ classe.Annee.libelle }}</td>
                                <td>{{ classe.Niveau.libelle }}e</td>
                                <td>{{ classe.libelle }}</td>
                            </tr>
                             {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- End  Hover Rows  -->
        </div>
    </div>
{% endblock %}