<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Saisie le prix  de mois de la niveau {{ niveau.libelle }}  </h4>
        </div>
        {{form_errors(form)}}
        <form role="form" action="{{ path('admin_prix_niveau_saisie',{'id':niveau.id}) }}" method="post">
            <div class="modal-body">
                <div class="form-group input-group">
                    <span class="input-group-addon">Prix de mois en Dinar</span>
                    {{form_widget(form.prixmois,{'attr':{'class':'form-control span12'} })}}
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                <button type="Submit" class="btn btn-primary">Modifier</button>
            </div>
            {{ form_rest(form) }}
        </form>
    </div>
</div>